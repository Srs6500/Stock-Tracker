# Copy this file to .streamlit/secrets.toml and add your API keys
# 
# REQUIRED:
# POLYGON_API_KEY - For stock prices and historical data
#   Get free key at: https://polygon.io/
#
# OPTIONAL (for Bloomberg-lite features):
# ALPHA_VANTAGE_API_KEY - For technical indicators (RSI, MACD, etc.)
#   Get free key at: https://www.alphavantage.co/support/#api-key
#
# NEWSAPI_KEY - For news feed
#   Get free key at: https://newsapi.org/register

# REQUIRED - Stock data
POLYGON_API_KEY = "your_polygon_api_key_here"

# OPTIONAL - Technical indicators (free tier: 5 calls/min, 500 calls/day)
ALPHA_VANTAGE_API_KEY = "your_alpha_vantage_key_here"

# OPTIONAL - News feed (free tier: 100 requests/day)
NEWSAPI_KEY = "your_newsapi_key_here"

